{
  "$schema": "https://raw.githubusercontent.com/eclipse/openvsx/master/cli/ovsx.schema.json",
  "registryUrl": "https://open-vsx.org",
  "pat": "${OVSX_PAT}",
  "extensionFile": "vscode-extension/*.vsix",
  "packageJson": "vscode-extension/package.json",
  "baseContentUrl": "https://github.com/AugustMoreau/augustium",
  "baseImagesUrl": "https://raw.githubusercontent.com/AugustMoreau/augustium/main",
  "metadata": {
    "displayName": "Augustium Language Support",
    "description": "Comprehensive language support for Augustium smart contract development including syntax highlighting, snippets, and build integration.",
    "categories": [
      "Programming Languages",
      "Snippets",
      "Other"
    ],
    "tags": [
      "augustium",
      "blockchain",
      "smart-contracts",
      "cryptocurrency",
      "web3",
      "defi",
      "syntax-highlighting",
      "language-support"
    ],
    "license": "MIT",
    "homepage": "https://augustium.org",
    "repository": {
      "type": "git",
      "url": "https://github.com/AugustMoreau/augustium.git"
    },
    "bugs": {
      "url": "https://github.com/AugustMoreau/augustium/issues"
    },
    "qna": "https://github.com/AugustMoreau/augustium/discussions",
    "badges": [
      {
        "url": "https://img.shields.io/github/license/AugustMoreau/augustium",
        "href": "https://github.com/AugustMoreau/augustium/blob/main/LICENSE",
        "description": "License"
      },
      {
        "url": "https://img.shields.io/github/stars/AugustMoreau/augustium",
        "href": "https://github.com/AugustMoreau/augustium",
        "description": "GitHub Stars"
      },
      {
        "url": "https://img.shields.io/github/issues/AugustMoreau/augustium",
        "href": "https://github.com/AugustMoreau/augustium/issues",
        "description": "GitHub Issues"
      }
    ],
    "galleryBanner": {
      "color": "#1e1e1e",
      "theme": "dark"
    },
    "preview": false,
    "sponsor": {
      "url": "https://github.com/sponsors/AugustMoreau"
    }
  },
  "files": {
    "icon": "icon.png",
    "readme": "README.md",
    "changelog": "CHANGELOG.md",
    "license": "LICENSE"
  },
  "dependencies": {
    "extensionDependencies": [],
    "extensionPack": []
  },
  "contributes": {
    "languages": [
      {
        "id": "augustium",
        "aliases": ["Augustium", "augustium"],
        "extensions": [".aug"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/augustium-light.svg",
          "dark": "./icons/augustium-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "augustium",
        "scopeName": "source.augustium",
        "path": "./syntaxes/augustium.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "augustium",
        "path": "./snippets/augustium.json"
      }
    ],
    "themes": [],
    "commands": [],
    "keybindings": [],
    "menus": {},
    "configuration": {
      "title": "Augustium",
      "properties": {
        "augustium.compiler.path": {
          "type": "string",
          "default": "augustc",
          "description": "Path to the Augustium compiler (augustc)"
        },
        "augustium.cli.path": {
          "type": "string",
          "default": "august",
          "description": "Path to the Augustium CLI tool (august)"
        },
        "augustium.format.onSave": {
          "type": "boolean",
          "default": true,
          "description": "Format Augustium files on save"
        },
        "augustium.linting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable linting for Augustium files"
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:augustium",
    "workspaceContains:**/*.aug"
  ],
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "capabilities": {
    "virtualWorkspaces": {
      "supported": "limited",
      "description": "Augustium extension provides limited support in virtual workspaces."
    },
    "untrustedWorkspaces": {
      "supported": "limited",
      "description": "Augustium extension provides limited support in untrusted workspaces."
    }
  }
}